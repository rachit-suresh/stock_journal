# Trading Journal - Environment Variables

# MongoDB Configuration
MONGO_CONNECTION_STRING="mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority"
MONGO_DB_NAME="trading_journal"

# Finnhub API (Stock Prices)
# Free tier: 60 API calls per minute
# Sign up: https://finnhub.io/
# Get your API key: https://finnhub.io/dashboard
FINNHUB_API_KEY="your_finnhub_api_key_here"

# Exchange Rate API (USD to INR conversion)
# Recommended: exchangerate-api.com (Free: 1500 requests/month)
# Sign up: https://www.exchangerate-api.com/
# Get your API key: https://app.exchangerate-api.com/
EXCHANGE_RATE_API_KEY="your_exchange_rate_api_key_here"

# Exchange Rate Provider (optional, default: exchangerate-api)
# Options: exchangerate-api, fixer, currencyapi
EXCHANGE_RATE_PROVIDER="exchangerate-api"

# Mock Prices Mode (for development/testing)
# Set to true to bypass Finnhub/Exchange Rate APIs and use fake prices
# Useful during development to avoid API rate limits and costs
# Set to false for production with real Finnhub prices + USD to INR conversion
USE_MOCK_PRICES=false
